@model LoginModel
@{
    ViewData["Title"] = "DNT Captcha";
}

<div class="container">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form id="form_login" asp-controller="DntCaptcha" asp-antiforgery="true" asp-action="Login" method="post">
        <partial name="_LoginPartial" model="Model"></partial>
    </form>
</div>

@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>

}